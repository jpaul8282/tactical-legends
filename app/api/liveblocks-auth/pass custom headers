<LiveblocksProvider
  authEndpoint={async (room) => {
    // Passing custom headers and body to your endpoint
    const headers = {
      // Custom headers
      // ...

      "Content-Type": "application/json",
    };

    const body = JSON.stringify({
      // Custom body
      // ...

      room,
    });

    const response = await fetch("/api/liveblocks-auth", {
      method: "POST",
      headers,
      body,
    });

    return await response.json();
  }}
/>
