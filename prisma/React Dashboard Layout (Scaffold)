function getNextMissions(currentId: number) {
  return campaignTree[currentId]?.next.map(id => campaignTree[id]) || [];
}

GET /api/simulations
import { useEffect, useState } from 'react';

export function useSimulations() {
  const [data, setData] = useState([]);

  useEffect(() => {
    fetch('/api/simulations')
      .then(res => res.json())
      .then(setData)
      .catch(console.error);
  }, []);

  return data;
}

import MissionCard from '../components/MissionCard';
import { useSimulations } from '../hooks/useSimulations';

export default function Dashboard() {
  const simulations = useSimulations();

  return (
    <div className="grid gap-4 p-6">
      {simulations.map(sim => (
        <MissionCard
          key={sim.id}
          character={sim.characterName}
          outcome={sim.missionOutcome}
          enemiesDefeated={sim.enemiesDefeated}
          gearUsed={sim.gearUsed}
        />
      ))}
    </div>
  );
}

export const campaignTree = {
  1: { name: "Awakening", next: [2, 3] },
  2: { name: "Echoes of War", next: [4] },
  3: { name: "Shadow Protocol", next: [4, 5] },
  4: { name: "Siege of the Forgotten", next: [6] },
  5: { name: "The Rogue Signal", next: [] },
  6: { name: "Final Reckoning", next: [] }
};

import { campaignTree } from '../data/campaignTree';

export default function CampaignMap() {
  return (
    <div className="p-6">
      {Object.entries(campaignTree).map(([id, node]) => (
        <div key={id} className="mb-4">
          <h3 className="font-bold text-lg">{node.name}</h3>
          <p>Next: {node.next.map(n => campaignTree[n].name).join(', ') || 'None'}</p>
        </div>
      ))}
    </div>
  );
}

function calculateOutcome({
  characterClass,
  gearLoadout,
  abilities,
  difficulty
}: {
  characterClass: string;
  gearLoadout: string[];
  abilities: string[];
  difficulty: 'easy' | 'medium' | 'hard';
}) {
  const base = difficulty === 'easy' ? 5 : difficulty === 'hard' ? 15 10;

  const classBonus = {
    Warrior: 5,
    Mage: 3,
    Rogue: 4
  };

  const gearBonus = gearLoadout.length * 2;
  const abilityBonus = abilities.length * 1.5;

  const totalScore = base + classBonus[characterClass] + gearBonus + abilityBonus;

  return {
    enemiesDefeated: Math.floor(totalScore),
    missionOutcome: totalScore > 15? 'Victory': totalScore > 10? 'Partial Success': 'Failure'
  };
}
const result = calculateOutcome({
  characterClass,
  gearLoadout,
  abilities,
  difficulty
});
